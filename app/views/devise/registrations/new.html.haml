- content_for(:title) { "회원 가입" }
%h2.content-title= t(".sign_up")
= devise_error_messages!
= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
  .form-group
    = f.label :email, required: "required"
    = f.email_field :email, class: "form-control"
  .form-group
    = f.label :nickname, required: "required"
    = f.text_field :nickname, class: "form-control"
  .form-group
    = f.label :password, required: "required"
    = f.password_field :password, class: "form-control", hint: (t('devise.shared.minimum_password_length', count: @minimum_password_length) if @minimum_password_length)
  .form-group
    = f.label :password_confirmation, required: "required"
    = f.password_field :password_confirmation, class: "form-control"
  .form-actions
    = f.button :submit, t(".sign_up"), class: "btn btn-primary"
= render "devise/shared/links"
