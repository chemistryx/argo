%h2.content-title= t(".change_your_password")
= devise_error_messages!
= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f|
  = f.input :reset_password_token, as: :hidden
  = f.full_error :reset_password_token
  .form-group
    = f.label :password, required: "required"
    = f.password_field :password, class: "form-control", hint: (t('devise.shared.minimum_password_length', count: @minimum_password_length) if @minimum_password_length)
  .form-group
    = f.label :password_confirmation, required: "required"
    = f.password_field :password_confirmation, class: "form-control"                                                                
  .form-actions
    = f.button :submit, t(".change_my_password"), class: "btn btn-primary"
= render "devise/shared/links"
