!!!
%html
  %head
    %title= (content_for?(:title) ? yield(:title) + " - ": "") + "DEEP LEARNING"
    = csrf_meta_tags
    %meta{:charset => "utf-8"}
    %meta(http-equiv="X-UA-Compatible" content="IE=edge,chrome=1")
    %meta{:name => "viewport", :content => "width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0"}
    = favicon_link_tag asset_path('favicon-96x96.png')
    = csp_meta_tag
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => 'reload'
    = javascript_include_tag 'application', 'data-turbolinks-track' => 'reload'
    = stylesheet_link_tag    'application', 'https://fonts.googleapis.com/css2?family=Noto+Sans+KR:wght@400;500;700&display=swap', media: 'all', 'data-turbolinks-track' => 'reload'
    = stylesheet_link_tag    'application', 'https://cdn.jsdelivr.net/npm/halfmoon@1.1.1/css/halfmoon-variables.min.css', media: 'all'
  %body.dark-mode
    .page-wrapper.with-sidebar.with-navbar.with-transitions(data-sidebar-type="full-height overlayed-sm-and-down" data-sidebar-hidden="hidden-sm-and-down")
      = render "layouts/navbar"
      .sidebar-overlay(onclick="halfmoon.toggleSidebar()")
      = render "layouts/sidebar"
      .content-wrapper
        .container-fluid
          .row
            .col-lg-9
              .content
                - if flash[:notice]  
                  .alert.alert-primary.filled.mb-15
                    = notice
                - if flash[:alert]
                  .alert.alert-danger.filled.mb-15
                    = alert
                
                = yield
    %script(src="https://cdn.jsdelivr.net/npm/halfmoon@1.1.1/js/halfmoon.min.js")
